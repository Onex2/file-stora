    <!-- –§–æ—Ä–º–∞ —Ä–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏–∏ -->
    <div class="auth-form" id="registerForm">
        <h2>–†–µ–≥–∏—Å—Ç—Ä–∞—Ü–∏—è</h2>
        <input type="text" id="regUsername" placeholder="–õ–æ–≥–∏–Ω">
        <input type="password" id="regPassword" placeholder="–ü–∞—Ä–æ–ª—å">
        <input type="password" id="regConfirm" placeholder="–ü–æ–≤—Ç–æ—Ä–∏—Ç–µ –ø–∞—Ä–æ–ª—å">
        <button onclick="register()">–ó–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞—Ç—å—Å—è</button>
        <p class="form-switch" onclick="showLogin()">–£–∂–µ –µ—Å—Ç—å –∞–∫–∫–∞—É–Ω—Ç? –í–æ–π—Ç–∏</p>
        <p id="regError" style="color: var(--error-color); text-align: center; margin-top: 1rem;"></p>
    </div>

    <!-- –§–æ—Ä–º–∞ –≤—Ö–æ–¥–∞ -->
    <div class="auth-form" id="loginForm" style="display: none;">
        <h2>–í—Ö–æ–¥</h2>
        <input type="text" id="loginUsername" placeholder="–õ–æ–≥–∏–Ω">
        <input type="password" id="loginPassword" placeholder="–ü–∞—Ä–æ–ª—å">
        <button onclick="performLogin()">–í–æ–π—Ç–∏</button>
        <p class="form-switch" onclick="showRegister()">–ù–µ—Ç –∞–∫–∫–∞—É–Ω—Ç–∞? –ó–∞—Ä–µ–≥–∏—Å—Ç—Ä–∏—Ä–æ–≤–∞—Ç—å—Å—è</p>
        <p id="loginError" style="color: var(--error-color); text-align: center; margin-top: 1rem;"></p>
    </div>

    <!-- –û—Å–Ω–æ–≤–Ω–æ–π –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å -->
    <div class="container" id="container">
        <div class="warning">
            –í–Ω–∏–º–∞–Ω–∏–µ: –ú–∞–∫—Å–∏–º–∞–ª—å–Ω—ã–π —Ä–∞–∑–º–µ—Ä —Ñ–∞–π–ª–∞ - 10GB. –¢—Ä–µ–±—É–µ—Ç—Å—è —Å–æ–≤—Ä–µ–º–µ–Ω–Ω—ã–π –±—Ä–∞—É–∑–µ—Ä.
        </div>

        <h2>–ó–∞—â–∏—â–µ–Ω–Ω–æ–µ —Ö—Ä–∞–Ω–∏–ª–∏—â–µ</h2>

        <!-- –ó–∞–≥—Ä—É–∑–∫–∞ —Ñ–∞–π–ª–æ–≤ -->
        <div style="margin: 1.5rem 0;">
            <input type="file" id="fileInput">
            <button onclick="uploadFile()">–ó–∞–≥—Ä—É–∑–∏—Ç—å —Ñ–∞–π–ª</button>
            <div class="progress-bar" id="progressBar" style="display: none;">
                <div class="progress" id="progress"></div>
            </div>
            <p id="fileError" style="color: var(--error-color); margin-top: 1rem;"></p>
        </div>

        <!-- –°–ø–∏—Å–æ–∫ —Ñ–∞–π–ª–æ–≤ -->
        <div id="fileList"></div>

        <button onclick="logout()" style="margin-top: 2rem;">–í—ã–π—Ç–∏ –∏–∑ —Å–∏—Å—Ç–µ–º—ã</button>
    </div>

    <div class="footer">
        powered by Danijar Sabirzjanov
    </div>

    <script>
        const MAX_FILE_SIZE = 10 * 1024 * 1024 * 1024; // 10GB
        const CHUNK_SIZE = 1024 * 1024; // 1MB
        const ITERATIONS = 100000;
        let currentUser = null;
        let db = null;

        // –§—É–Ω–∫—Ü–∏–∏ –ø–µ—Ä–µ–∫–ª—é—á–µ–Ω–∏—è —Ñ–æ—Ä–º
        function showLogin() {
            document.getElementById('registerForm').style.display = 'none';
            document.getElementById('loginForm').style.display = 'block';
            clearErrors();
        }

        function showRegister() {
            document.getElementById('loginForm').style.display = 'none';
            document.getElementById('registerForm').style.display = 'block';
            clearErrors();
        }

        function clearErrors() {
            document.getElementById('regError').textContent = '';
            document.getElementById('loginError').textContent = '';
            document.getElementById('fileError').textContent = '';
        }

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è IndexedDB
        async function initDB() {
            return new Promise((resolve, reject) => {
                const request = indexedDB.open('SecureStorage10GB', 3);

                request.onupgradeneeded = (e) => {
                    db = e.target.result;
                    if (!db.objectStoreNames.contains('files')) {
                        db.createObjectStore('files', { keyPath: 'id' });
                    }
                    if (!db.objectStoreNames.contains('chunks')) {
                        const chunksStore = db.createObjectStore('chunks', {
                            keyPath: ['fileId', 'chunkIndex']
                        });
                        chunksStore.createIndex('byFile', 'fileId');
                    }
                };

                request.onsuccess = (e) => {
                    db = e.target.result;
                    resolve();
                };

                request.onerror = (e) => reject('–û—à–∏–±–∫–∞ –±–∞–∑—ã –¥–∞–Ω–Ω—ã—Ö');
            });
        }

        async function checkSession() {
            await initDB();
            const loggedIn = sessionStorage.getItem('loggedIn');
            if (loggedIn) {
                currentUser = loggedIn;
                showContent();
                loadFileList();
            }
        }

        // –§—É–Ω–∫—Ü–∏–∏ –∞—É—Ç–µ–Ω—Ç–∏—Ñ–∏–∫–∞—Ü–∏–∏
        function register() {
            const username = document.getElementById('regUsername').value.trim();
            const password = document.getElementById('regPassword').value;
            const confirm = document.getElementById('regConfirm').value;

            if (!username || !password) return showError('regError', '–ó–∞–ø–æ–ª–Ω–∏—Ç–µ –≤—Å–µ –ø–æ–ª—è');
            if (password !== confirm) return showError('regError', '–ü–∞—Ä–æ–ª–∏ –Ω–µ —Å–æ–≤–ø–∞–¥–∞—é—Ç');
            if (password.length < 8) return showError('regError', '–ü–∞—Ä–æ–ª—å –¥–æ–ª–∂–µ–Ω –±—ã—Ç—å –Ω–µ –º–µ–Ω–µ–µ 8 —Å–∏–º–≤–æ–ª–æ–≤');

            const users = JSON.parse(localStorage.getItem('users') || '{}');
            if (users[username]) return showError('regError', '–õ–æ–≥–∏–Ω —É–∂–µ –∑–∞–Ω—è—Ç');

            const salt = CryptoJS.lib.WordArray.random(128/8).toString();
            const key = CryptoJS.PBKDF2(password, salt, {
                keySize: 256/32,
                iterations: ITERATIONS
            });

            users[username] = { salt, key: key.toString(), iterations: ITERATIONS };
            localStorage.setItem('users', JSON.stringify(users));

            currentUser = username;
            startSession();
        }

        async function performLogin() {
            const username = document.getElementById('loginUsername').value.trim();
            const password = document.getElementById('loginPassword').value;

            try {
                const users = JSON.parse(localStorage.getItem('users') || '{}');
                const user = users[username];

                if (!user) {
                    showError('loginError', '–ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–µ –Ω–∞–π–¥–µ–Ω');
                    return;
                }

                const key = CryptoJS.PBKDF2(password, user.salt, {
                    keySize: 256/32,
                    iterations: user.iterations
                });

                if (key.toString() === user.key) {
                    await startSession(username);
                    showContent();
                    loadFileList();
                } else {
                    showError('loginError', '–ù–µ–≤–µ—Ä–Ω—ã–π –ø–∞—Ä–æ–ª—å');
                }
            } catch (e) {
                console.error('Login error:', e);
                showError('loginError', '–û—à–∏–±–∫–∞ –≤—Ö–æ–¥–∞');
            }
        }

        async function startSession(username) {
            return new Promise(resolve => {
                sessionStorage.setItem('loggedIn', username);
                currentUser = username;
                resolve();
            });
        }

        // –†–∞–±–æ—Ç–∞ —Å —Ñ–∞–π–ª–∞–º–∏
        async function uploadFile() {
            const fileInput = document.getElementById('fileInput');
            const file = fileInput.files[0];

            if (!file) return showError('fileError', '–í—ã–±–µ—Ä–∏—Ç–µ —Ñ–∞–π–ª');
            if (file.size > MAX_FILE_SIZE) return showError('fileError', '–§–∞–π–ª —Å–ª–∏—à–∫–æ–º –±–æ–ª—å—à–æ–π');

            showProgress(true);

            try {
                const fileId = CryptoJS.lib.WordArray.random(16).toString();
                const totalChunks = Math.ceil(file.size / CHUNK_SIZE);

                await saveFileMetadata(fileId, file, totalChunks);

                const reader = file.stream().getReader();
                let chunkIndex = 0;

                while (true) {
                    const { done, value } = await reader.read();
                    if (done) break;

                    const encryptedChunk = await encryptChunk(value);
                    await saveChunk(fileId, chunkIndex, encryptedChunk);

                    chunkIndex++;
                    updateProgress((chunkIndex / totalChunks) * 100);
                }

                loadFileList();
                showError('fileError', '–§–∞–π–ª —É—Å–ø–µ—à–Ω–æ –∑–∞–≥—Ä—É–∂–µ–Ω!');
            } catch (e) {
                console.error('Upload error:', e);
                showError('fileError', '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Ñ–∞–π–ª–∞');
            } finally {
                showProgress(false);
                fileInput.value = '';
            }
        }

        async function downloadFile(fileId) {
            try {
                const password = document.getElementById('loginPassword').value;
                const metadata = await getFileMetadata(fileId);

                if (!metadata) throw new Error('–§–∞–π–ª –Ω–µ –Ω–∞–π–¥–µ–Ω');

                const chunks = [];
                for (let i = 0; i < metadata.chunks; i++) {
                    const chunk = await getChunk(fileId, i);
                    const decrypted = CryptoJS.AES.decrypt(chunk.data, password);
                    chunks.push(wordArrayToBuffer(decrypted));
                }

                const blob = new Blob(chunks, { type: metadata.type });
                const link = document.createElement('a');
                link.href = URL.createObjectURL(blob);
                link.download = metadata.name;
                link.click();

                setTimeout(() => URL.revokeObjectURL(link.href), 100);
            } catch (e) {
                console.error('Download error:', e);
                showError('fileError', '–û—à–∏–±–∫–∞ —Å–∫–∞—á–∏–≤–∞–Ω–∏—è —Ñ–∞–π–ª–∞');
            }
        }

        async function deleteFile(fileId) {
            try {
                const tx = db.transaction(['files', 'chunks'], 'readwrite');

                // –£–¥–∞–ª–µ–Ω–∏–µ –º–µ—Ç–∞–¥–∞–Ω–Ω—ã—Ö
                tx.objectStore('files').delete(fileId);

                // –£–¥–∞–ª–µ–Ω–∏–µ —á–∞–Ω–∫–æ–≤ —á–µ—Ä–µ–∑ –∏–Ω–¥–µ–∫—Å
                const chunksStore = tx.objectStore('chunks');
                const index = chunksStore.index('byFile');
                const range = IDBKeyRange.only(fileId);
                const request = index.openCursor(range);

                request.onsuccess = (e) => {
                    const cursor = e.target.result;
                    if (cursor) {
                        chunksStore.delete(cursor.primaryKey);
                        cursor.continue();
                    }
                };

                await new Promise(resolve => tx.oncomplete = resolve);
                loadFileList();
                showError('fileError', '–§–∞–π–ª —É—Å–ø–µ—à–Ω–æ —É–¥–∞–ª—ë–Ω!');
            } catch (e) {
                console.error('Delete error:', e);
                showError('fileError', '–û—à–∏–±–∫–∞ —É–¥–∞–ª–µ–Ω–∏—è —Ñ–∞–π–ª–∞');
            }
        }

        // –í—Å–ø–æ–º–æ–≥–∞—Ç–µ–ª—å–Ω—ã–µ —Ñ—É–Ω–∫—Ü–∏–∏
        function showContent() {
            document.getElementById('registerForm').style.display = 'none';
            document.getElementById('loginForm').style.display = 'none';
            document.getElementById('container').style.display = 'block';
        }

        function showError(elementId, message) {
            const element = document.getElementById(elementId);
            element.textContent = message;
            setTimeout(() => element.textContent = '', 3000);
        }

        async function saveFileMetadata(fileId, file, totalChunks) {
            const metadata = {
                id: fileId,
                userId: currentUser,
                name: file.name,
                size: file.size,
                type: file.type,
                chunks: totalChunks,
                timestamp: Date.now()
            };

            const tx = db.transaction('files', 'readwrite');
            tx.objectStore('files').put(metadata);
            return new Promise(resolve => tx.oncomplete = resolve);
        }

        async function saveChunk(fileId, chunkIndex, data) {
            const tx = db.transaction('chunks', 'readwrite');
            tx.objectStore('chunks').put({
                fileId,
                chunkIndex,
                data
            });
            return new Promise(resolve => tx.oncomplete = resolve);
        }

        async function loadFileList() {
            try {
                const tx = db.transaction('files', 'readonly');
                const store = tx.objectStore('files');
                const request = store.getAll();

                const files = await new Promise((resolve, reject) => {
                    request.onsuccess = () => resolve(request.result || []);
                    request.onerror = () => reject(request.error);
                });

                if (!Array.isArray(files)) {
                    throw new Error('–ù–µ–∫–æ—Ä—Ä–µ–∫—Ç–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç –¥–∞–Ω–Ω—ã—Ö —Ñ–∞–π–ª–æ–≤');
                }

                const userFiles = files.filter(f => f.userId === currentUser);
                renderFileList(userFiles);
            } catch (e) {
                console.error('File list load error:', e);
                showError('fileError', '–û—à–∏–±–∫–∞ –∑–∞–≥—Ä—É–∑–∫–∏ —Å–ø–∏—Å–∫–∞ —Ñ–∞–π–ª–æ–≤');
            }
        }

        function renderFileList(files) {
            const fileList = document.getElementById('fileList');
            fileList.innerHTML = files.map(file => `
                <div class="file-item">
                    <div>üìÅ ${file.name} (${formatSize(file.size)})</div>
                    <small>–ó–∞–≥—Ä—É–∂–µ–Ω: ${new Date(file.timestamp).toLocaleString()}</small>
                    <div class="file-actions">
                        <button onclick="downloadFile('${file.id}')">–°–∫–∞—á–∞—Ç—å</button>
                        <button onclick="deleteFile('${file.id}')">–£–¥–∞–ª–∏—Ç—å</button>
                    </div>
                </div>
            `).join('');
        }

        function formatSize(bytes) {
            const units = ['B', 'KB', 'MB', 'GB'];
            let size = bytes;
            let unitIndex = 0;

            while (size >= 1024 && unitIndex < units.length - 1) {
                size /= 1024;
                unitIndex++;
            }

            return `${size.toFixed(2)} ${units[unitIndex]}`;
        }

        function wordArrayToBuffer(wordArray) {
            const buffer = new Uint8Array(wordArray.sigBytes);
            for (let i = 0; i < wordArray.sigBytes; i++) {
                buffer[i] = (wordArray.words[i >>> 2] >>> (24 - (i % 4) * 8)) & 0xff;
            }
            return buffer;
        }

        async function encryptChunk(chunk) {
            const password = document.getElementById('loginPassword').value;
            return CryptoJS.AES.encrypt(
                CryptoJS.lib.WordArray.create(chunk),
                password
            ).toString();
        }

        async function getFileMetadata(fileId) {
            const tx = db.transaction('files', 'readonly');
            const store = tx.objectStore('files');
            return new Promise(resolve => {
                const request = store.get(fileId);
                request.onsuccess = e => resolve(e.target.result);
            });
        }

        async function getChunk(fileId, chunkIndex) {
            const tx = db.transaction('chunks', 'readonly');
            const store = tx.objectStore('chunks');
            return new Promise(resolve => {
                const request = store.get([fileId, chunkIndex]);
                request.onsuccess = e => resolve(e.target.result);
            });
        }

        function showProgress(show) {
            document.getElementById('progressBar').style.display = show ? 'block' : 'none';
            if (!show) updateProgress(0);
        }

        function updateProgress(percent) {
            document.getElementById('progress').style.width = percent + '%';
        }

        function logout() {
            sessionStorage.removeItem('loggedIn');
            currentUser = null;
            location.reload();
        }

        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
        document.getElementById('loginPassword').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') performLogin();
        });

        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è
        checkSession();
    </script>
</body>
</html>
